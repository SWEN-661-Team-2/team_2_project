{
  "name": "careconnect-desktop-electron",
  "version": "0.1.0",
  "description": "CareConnect Desktop â€” left-handed healthcare app",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run vite\" \"wait-on http://localhost:5173 && electron .\"",
    "vite": "vite renderer",
    "build": "vite build renderer",
    "start": "npm run dev",
    "test": "jest --coverage",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react-router-dom": "^7.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@vitejs/plugin-react": "^4.2.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-istanbul": "^7.0.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.33.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.careconnect.desktop",
    "productName": "CareConnect",
    "mac": {
      "target": [
        "dmg"
      ],
      "arch": [
        "arm64",
        "x64"
      ]
    },
    "directories": {
      "output": "dist"
    }
  },
  "jest": {
  "testEnvironment": "jsdom",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{js,jsx}",
    "!<rootDir>/src/main.jsx"
  ],
  "moduleNameMapper": {
    "\\.(css|less|scss|sass)$": "identity-obj-proxy",
    "^@/(.*)$": "<rootDir>/src/$1" 
  },
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/tests/setupTests.js"
  ],
  "verbose": true
}
}
